<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E6E4E4"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/rollsTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5px"
        android:text="2 + 5 + 4 + 2"
        android:textColor="@android:color/holo_orange_dark"
        android:textSize="30sp"
        android:textStyle="bold|italic" />

    <TextView
        android:id="@+id/totalTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="25px"
        android:text="13"
        android:textColor="#4C4B4B"
        android:textSize="130sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/SevenB"
                    android:layout_width="150px"
                    android:layout_height="150px"
                    android:layout_margin="5px"
                    android:layout_marginStart="50px"
                    android:layout_marginLeft="50px"
                    android:layout_weight="1"
                    android:background="#F5F5F5"
                    android:onClick="qtyButtonPressed"
                    android:text="7"
                    android:textSize="24sp"
                    app:backgroundTint="#2196F3"
                    app:cornerRadius="5sp"
                    app:strokeColor="#FFFFFF" />

                <Button
                    android:id="@+id/EightB"
                    android:layout_width="150px"
                    android:layout_height="150px"
                    android:layout_margin="5px"
                    android:layout_weight="1"
                    android:background="#009688"
                    android:onClick="qtyButtonPressed"
                    android:text="8"
                    android:textSize="24sp"
                    app:backgroundTint="#2196F3"
                    app:cornerRadius="5sp" />

                <Button
                    android:id="@+id/NineB"
                    android:layout_width="150px"
                    android:layout_height="150px"
                    android:layout_margin="5px"
                    android:layout_weight="1"
                    android:background="#009688"
                    android:onClick="qtyButtonPressed"
                    android:text="9"
                    android:textSize="24sp"
                    app:backgroundTint="#2196F3"
                    app:cornerRadius="5sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/FourB"
                    android:layout_width="150px"
                    android:layout_height="150px"
                    android:layout_margin="5px"
                    android:layout_marginStart="50px"
                    android:layout_marginLeft="50px"
                    android:layout_weight="1"
                    android:background="#009688"
                    android:onClick="qtyButtonPressed"
                    android:text="4"
                    android:textSize="24sp"
                    app:backgroundTint="#2196F3"
                    app:cornerRadius="5sp" />

                <Button
                    android:id="@+id/FiveB"
                    android:layout_width="150px"
                    android:layout_height="150px"
                    android:layout_margin="5px"
                    android:layout_weight="1"
                    android:background="#009688"
                    android:onClick="qtyButtonPressed"
                    android:text="5"
                    android:textSize="24sp"
                    app:backgroundTint="#2196F3"
                    app:cornerRadius="5sp" />

                <Button
                    android:id="@+id/SixB"
                    android:layout_width="150px"
                    android:layout_height="150px"
                    android:layout_margin="5px"
                    android:layout_weight="1"
                    android:background="#009688"
                    android:onClick="qtyButtonPressed"
                    android:text="6"
                    android:textSize="24sp"
                    app:backgroundTint="#2196F3"
                    app:cornerRadius="5sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/OneB"
                    android:layout_width="150px"
                    android:layout_height="150px"
                    android:layout_margin="5px"
                    android:layout_marginStart="50px"
                    android:layout_marginLeft="50px"
                    android:layout_weight="1"
                    android:background="#009688"
                    android:onClick="qtyButtonPressed"
                    android:text="1"
                    android:textSize="24sp"
                    app:backgroundTint="#2196F3"
                    app:cornerRadius="5sp" />

                <Button
                    android:id="@+id/TwoB"
                    android:layout_width="150px"
                    android:layout_height="150px"
                    android:layout_margin="5px"
                    android:layout_weight="1"
                    android:background="#009688"
                    android:onClick="qtyButtonPressed"
                    android:text="2"
                    android:textSize="24sp"
                    app:backgroundTint="#2196F3"
                    app:cornerRadius="5sp" />

                <Button
                    android:id="@+id/ThreeB"
                    android:layout_width="150px"
                    android:layout_height="150px"
                    android:layout_margin="5px"
                    android:layout_weight="1"
                    android:background="#009688"
                    android:onClick="qtyButtonPressed"
                    android:text="3"
                    android:textSize="24sp"
                    app:backgroundTint="#2196F3"
                    app:cornerRadius="5sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/ZeroB"
                    android:layout_width="0dp"
                    android:layout_height="200px"
                    android:layout_margin="5px"
                    android:layout_marginStart="50px"
                    android:layout_marginLeft="50px"
                    android:layout_weight=".33"
                    android:background="#009688"
                    android:onClick="qtyButtonPressed"
                    android:text="0"
                    android:textSize="24sp"
                    app:backgroundTint="#2196F3"
                    app:cornerRadius="5sp" />

                <Button
                    android:id="@+id/ClearB"
                    android:layout_width="0dp"
                    android:layout_height="200px"
                    android:layout_margin="5px"
                    android:layout_weight=".67"
                    android:background="#009688"
                    android:onClick="clearButtonPressed"
                    android:text="CLEAR"
                    android:textSize="22sp"
                    app:backgroundTint="#2196F3"
                    app:cornerRadius="5sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/qtyTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center|right"
                    android:text="4"
                    android:textColor="@android:color/holo_orange_dark"
                    android:textSize="45sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/selectedDieTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="D6"
                    android:textColor="#4C4B4B"
                    android:textSize="45sp"
                    android:textStyle="bold" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20px"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/D4B"
                    android:layout_width="0dp"
                    android:layout_height="250px"
                    android:layout_marginTop="0dp"
                    android:layout_weight=".5"
                    android:adjustViewBounds="false"
                    android:background="@color/design_default_color_surface"
                    android:cropToPadding="false"
                    android:onClick="diceButtonPressed"
                    android:padding="25px"
                    android:scaleType="fitCenter"
                    android:tag="D4"
                    app:srcCompat="@drawable/d4" />

                <ImageButton
                    android:id="@+id/D6B"
                    android:layout_width="0dp"
                    android:layout_height="250px"
                    android:layout_weight=".5"
                    android:adjustViewBounds="false"
                    android:background="@color/design_default_color_surface"
                    android:cropToPadding="false"
                    android:onClick="diceButtonPressed"
                    android:padding="25px"
                    android:scaleType="fitCenter"
                    android:tag="D6"
                    app:srcCompat="@drawable/d6" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/D8B"
                    android:layout_width="0dp"
                    android:layout_height="250px"
                    android:layout_weight=".5"
                    android:adjustViewBounds="false"
                    android:background="@color/design_default_color_surface"
                    android:cropToPadding="false"
                    android:onClick="diceButtonPressed"
                    android:padding="25px"
                    android:scaleType="fitCenter"
                    android:tag="D8"
                    app:srcCompat="@drawable/d8" />

                <ImageButton
                    android:id="@+id/D10B"
                    android:layout_width="0dp"
                    android:layout_height="250px"
                    android:layout_weight=".5"
                    android:adjustViewBounds="false"
                    android:background="@color/design_default_color_surface"
                    android:cropToPadding="false"
                    android:onClick="diceButtonPressed"
                    android:scaleType="fitCenter"
                    android:tag="D10"
                    app:srcCompat="@drawable/d10" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/D12B"
                    android:layout_width="0dp"
                    android:layout_height="250px"
                    android:layout_weight=".5"
                    android:adjustViewBounds="false"
                    android:background="@color/design_default_color_surface"
                    android:cropToPadding="false"
                    android:onClick="diceButtonPressed"
                    android:scaleType="fitCenter"
                    android:tag="D12"
                    app:srcCompat="@drawable/d12" />

                <ImageButton
                    android:id="@+id/D20B"
                    android:layout_width="0dp"
                    android:layout_height="250px"
                    android:layout_weight=".5"
                    android:adjustViewBounds="false"
                    android:background="@color/design_default_color_surface"
                    android:cropToPadding="false"
                    android:onClick="diceButtonPressed"
                    android:padding="25px"
                    android:scaleType="fitCenter"
                    android:tag="D20"
                    app:srcCompat="@drawable/d20" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom|left"
        android:orientation="horizontal">

        <Button
            android:id="@+id/RollB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20px"
            android:layout_weight="1"
            android:onClick="rollButtonPressed"
            android:text="ROLL"
            android:textSize="24sp"
            app:backgroundTint="#2196F3"
            app:cornerRadius="10sp" />

        <Button
            android:id="@+id/PercentileB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20px"
            android:layout_weight="1"
            android:text="Percentile"
            android:textSize="24sp"
            app:backgroundTint="#2196F3"
            app:cornerRadius="10sp" />
    </LinearLayout>

</LinearLayout>